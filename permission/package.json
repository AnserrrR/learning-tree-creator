{
  "name": "learning-tree-creator-permission",
  "version": "0.0.1",
  "description": "",
  "author": "AnserrrR",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "dotenv -e ../.env -c dev -- nest start",
    "start:dev": "dotenv -e ../.env -c dev -- nest start --watch",
    "start:docker:dev": "docker compose -p learning-tree-creator-permission-dev -f dev-utils/docker-compose.dev.yml up -V -d --build --force-recreate -t 1",
    "start:debug": "dotenv -e ../.env -c dev -- nest start --debug --watch",
    "start:prod": "dotenv -e ../.env -c prod -- node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "dev:db:up": "docker-compose -p learning-tree-creator-permission-dev -f dev-utils/docker-compose.dev.yml up learning-tree-creator-db-dev -d --force-recreate --build",
    "dev:db:down": "docker-compose -p learning-tree-creator-permission-dev -f dev-utils/docker-compose.dev.yml down learning-tree-creator-db-dev",
    "dev:db:restore": "docker exec -i learning-tree-creator-db-dev sh /opt/backups/restore.sh",
    "test:db:up": "docker-compose -p learning-tree-creator-permission-test -f dev-utils/docker-compose.test-db.yml up -d",
    "test:db:down": "docker-compose -p learning-tree-creator-permission-test -f dev-utils/docker-compose.test-db.yml down",
    "test:e2e": "dotenv -e ../.env -c test -- jest --runInBand --config test/jest-e2e.json",
    "upgrade-deps": "ncu"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.8",
    "@nestjs/core": "^10.3.8",
    "@nestjs/microservices": "^10.3.8",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.8",
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "content-disposition": "^0.5.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "heic-convert": "^2.1.0",
    "joi": "^17.12.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "minio": "^7.1.3",
    "ms": "^2.1.3",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.8",
    "@types/bcrypt": "^5.0.2",
    "@types/content-disposition": "^0.5.8",
    "@types/express": "^4.17.21",
    "@types/heic-convert": "^1.2.3",
    "@types/jest": "29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.0",
    "@types/ms": "^0.7.34",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "jest": "29.7.0",
    "npm-check-updates": "^16.14.18",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "type-fest": "^4.16.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
